<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!--stickyviewpager attrs start-->
    <declare-styleable name="ForegroundImageView">
        <attr name="android:foreground" />
    </declare-styleable>

    <attr name="aspect" />

    <declare-styleable name="CustomSlidingTabIndicator">
        <attr name="STIindicatorColor" format="color" />
        <attr name="STIunderlineColor" format="color" />
        <attr name="STIdividerColor" format="color" />
        <attr name="STItextColor" format="color"/>
        <attr name="STIindicatorHeight" format="dimension" />
        <attr name="STIunderlineHeight" format="dimension" />
        <attr name="STIdividersPadding" format="dimension" />
        <attr name="STItabLeftRightPadding" format="dimension" />
        <attr name="STIscrollOffSet" format="dimension" />
        <attr name="STItabTextSize" format="dimension" />
        <attr name="STItabBackground" format="reference" />
        <attr name="STIshouldExpand" format="boolean" />
        <attr name="STItextCaps" format="boolean" />
        <attr name="STItabTopBtmPadding" format="dimension" />
    </declare-styleable>

    <declare-styleable name="SlidingTabLayout">
        <attr name="indicatorColor" format="color"/>
        <attr name="shouldExpand" format="boolean" />
        <attr name="slidingTabView" format="reference" />
        <attr name="slidingTabTextViewId" format="reference"/>
    </declare-styleable>
    <declare-styleable name="CircleImageView">
        <attr name="border_width" format="dimension" />
        <attr name="border_color" format="color" />
    </declare-styleable>
    <!--stickyviewpager attrs end-->


    <declare-styleable name="bottomNav">
        <attr name="navGrowTabs" format="reference|boolean"/>
        <attr name="navGrowthModifier" format="reference|dimension"/>
        <attr name="navShowCircleReveal" format="reference|boolean"/>
        <attr name="navInitiallySelectedChild" format="reference|integer"/>
        <attr name="navExpandAnimationTime" format="reference|integer"/>
    </declare-styleable>

    <declare-styleable name="bottomTab">
        <attr name="tabImage" format="reference"/>
        <attr name="tabText" format="reference|string"/>
        <attr name="tabColor" format="reference|color"/>
        <attr name="textColor" format="reference|color"/>
        <attr name="alwaysShowText" format="reference|boolean"/>
        <attr name="unselectedAlpha" format="reference|float"/>
    </declare-styleable>

    <declare-styleable name="stl_SmartTabLayout">
        <attr name="stl_indicatorAlwaysInCenter" format="boolean"/>
        <attr name="stl_indicatorWithoutPadding" format="boolean"/>
        <attr name="stl_indicatorInFront" format="boolean"/>
        <attr name="stl_indicatorInterpolation" format="enum">
            <enum name="smart" value="0"/>
            <enum name="linear" value="1"/>
        </attr>
        <attr name="stl_indicatorGravity" format="enum">
            <enum name="bottom" value="0"/>
            <enum name="top" value="1"/>
            <enum name="center" value="2"/>
        </attr>
        <attr name="stl_indicatorColor" format="color"/>
        <attr name="stl_indicatorColors" format="reference"/>
        <attr name="stl_indicatorThickness" format="dimension"/>
        <attr name="stl_indicatorWidth" format="dimension">
            <enum name="auto" value="-1"/>
        </attr>
        <attr name="stl_indicatorCornerRadius" format="dimension"/>
        <attr name="stl_overlineColor" format="color"/>
        <attr name="stl_overlineThickness" format="dimension"/>
        <attr name="stl_underlineColor" format="color"/>
        <attr name="stl_underlineThickness" format="dimension"/>
        <attr name="stl_dividerColor" format="color"/>
        <attr name="stl_dividerColors" format="reference"/>
        <attr name="stl_dividerThickness" format="dimension"/>
        <attr name="stl_defaultTabBackground" format="reference"/>
        <attr name="stl_defaultTabTextAllCaps" format="boolean"/>
        <attr name="stl_defaultTabTextColor" format="color|reference"/>
        <attr name="stl_defaultTabTextSize" format="dimension"/>
        <attr name="stl_defaultTabTextHorizontalPadding" format="dimension"/>
        <attr name="stl_defaultTabTextMinWidth" format="dimension"/>
        <attr name="stl_customTabTextLayoutId" format="reference"/>
        <attr name="stl_customTabTextViewId" format="reference"/>
        <attr name="stl_distributeEvenly" format="boolean"/>
        <attr name="stl_clickable" format="boolean"/>
        <attr name="stl_titleOffset" format="dimension">
            <enum name="auto_center" value="-1"/>
        </attr>
        <attr name="stl_drawDecorationAfterTab" format="boolean"/>
    </declare-styleable>

</resources>